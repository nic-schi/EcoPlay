<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".quiz.QuizListeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/quizText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="@string/quiz.text"
                android:textAppearance="@style/TextAppearance.EcoPlay"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/alleQuizzes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/quizText">

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/quiz1"
                    android:name="com.jadehs.ma.ecoplay.inhalte.InhalteFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:inhaltIcon="@drawable/bee"
                    app:inhaltImage="@drawable/imker"
                    app:inhaltRedirect="quiz.quizzes.BienenQuizActivity"
                    app:thema="@string/inhalte.1.thema"
                    tools:layout="@layout/fragment_inhalte" />

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/quiz3"
                    android:name="com.jadehs.ma.ecoplay.inhalte.InhalteFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:inhaltIcon="@drawable/earth_globe"
                    app:inhaltImage="@drawable/atomkraftwerk"
                    app:inhaltRedirect="quiz.quizzes.KlimawandelQuizActivity"
                    app:thema="@string/inhalte.3.thema"
                    tools:layout="@layout/fragment_inhalte" />

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/quiz2"
                    android:name="com.jadehs.ma.ecoplay.inhalte.InhalteFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:inhaltIcon="@drawable/turtle"
                    app:inhaltImage="@drawable/dolphin"
                    app:inhaltRedirect="quiz.quizzes.OzeanQuizActivity"
                    app:thema="@string/inhalte.5.thema"
                    tools:layout="@layout/fragment_inhalte" />


                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/quiz4"
                    android:name="com.jadehs.ma.ecoplay.inhalte.InhalteFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:inhaltIcon="@drawable/recycle"
                    app:inhaltImage="@drawable/garbage"
                    app:inhaltRedirect="quiz.quizzes.MuellQuizActivity"
                    app:thema="@string/inhalte.4.thema"
                    tools:layout="@layout/fragment_inhalte" />

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/quiz5"
                    android:name="com.jadehs.ma.ecoplay.inhalte.InhalteFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:inhaltIcon="@drawable/fire"
                    app:inhaltImage="@drawable/forest_fire"
                    app:inhaltRedirect="quiz.quizzes.WaldbrandQuizActivity"
                    app:thema="@string/inhalte.2.thema"
                    tools:layout="@layout/fragment_inhalte" />

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>