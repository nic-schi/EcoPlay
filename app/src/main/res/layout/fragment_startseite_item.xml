<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/item_image"
        android:layout_width="160dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/startseite_text_fields_image_bg"
        android:cropToPadding="true"
        android:elevation="4dp"
        android:padding="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/item_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="-7dp"
        android:layout_marginEnd="4dp"
        android:background="@color/startseite_text_fields_bg"
        android:gravity="center_vertical"
        android:padding="8sp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.EcoPlay"
        android:textColor="@color/startseite_text_fields_text"
        app:layout_constraintEnd_toEndOf="@+id/item_image"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/item_image"
        app:layout_constraintTop_toBottomOf="@+id/item_image"
        tools:text="@string/placeholder.header.short" />
</androidx.constraintlayout.widget.ConstraintLayout>