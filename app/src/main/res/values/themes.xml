<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.EcoPlay" parent="Theme.AppCompat.Light">
        <!-- ActionBar -->
        <item name="android:actionBarStyle">@style/Theme.EcoPlay.ActionBar</item>
        <item name="actionBarStyle">@style/Theme.EcoPlay.ActionBar</item>

        <item name="android:windowBackground">@color/background</item>
        <item name="android:colorBackground">@color/background</item>

        <item name="android:textColor">@color/text_color</item>

        <item name="android:actionOverflowButtonStyle">@style/OwnActionButtonOverflow</item>
        <item name="actionOverflowButtonStyle">@style/OwnActionButtonOverflow</item>

        <item name="android:overlapAnchor">false</item>
        <item name="overlapAnchor">false</item>
    </style>

    <!-- ActionBar -->
    <style name="Theme.EcoPlay.ActionBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="titleTextStyle">@style/TextAppearance.Apptitel</item>
        <item name="android:titleTextStyle">@style/TextAppearance.Apptitel</item>

        <item name="android:background">@drawable/action_bar_bg</item>
        <item name="background">@drawable/action_bar_bg</item>

        <item name="android:logo">@drawable/logo</item>
        <item name="logo">@drawable/logo</item>

        <item name="android:height">@dimen/action_bar_height</item>
        <item name="height">@dimen/action_bar_height</item>

        <item name="android:homeAsUpIndicator">@drawable/go_back_btn</item>
        <item name="homeAsUpIndicator">@drawable/go_back_btn</item>

        <item name="android:elevation">10dp</item>

        <item name="android:displayOptions">showHome|useLogo|showTitle</item>
        <item name="displayOptions">showHome|useLogo|showTitle</item>
    </style>

    <!-- Overflow button -->
    <style name="OwnActionButtonOverflow" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/actionbar_overflow</item>
    </style>

    <!-- AppTitel -->
    <style name="TextAppearance.Apptitel" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">@dimen/apptitel_text_size</item>
        <item name="android:textColor">@color/apptitel</item>
    </style>
</resources>